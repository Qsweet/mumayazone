# Application
NEXT_PUBLIC_APP_NAME="Mohammad Qudah - Professional Services"
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_API_URL=http://localhost:3000/api
NODE_ENV=development

# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/mqudah_db
DATABASE_POOL_SIZE=20

# Authentication
JWT_SECRET=development-secret-key-min-32-chars-long
JWT_EXPIRATION=7d
REFRESH_TOKEN_EXPIRATION=30d

# Email Service
SENDGRID_API_KEY=your-sendgrid-api-key
SENDGRID_FROM_EMAIL=noreply@mumayazone.com
SENDGRID_FROM_NAME="Mohammad Qudah"

# Payment Processing (if applicable)
STRIPE_PUBLIC_KEY=pk_test_...
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# Cloud Storage
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_S3_BUCKET=mqudah-assets
AWS_S3_REGION=us-east-1

# Analytics & Monitoring
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
SENTRY_DSN=your-sentry-dsn
SENTRY_AUTH_TOKEN=your-sentry-token

# Redis (for caching & sessions)
REDIS_URL=redis://localhost:6379

# Admin Settings
ADMIN_EMAIL=admin@mumayazone.com
ADMIN_PASSWORD_HASH=will-be-set-during-setup

# Feature Flags
FEATURE_NEWSLETTER=true
FEATURE_BLOG_COMMENTS=false
FEATURE_AFFILIATE_PROGRAM=false
